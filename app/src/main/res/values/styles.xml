<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/normalSize</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleBarBack">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TitleBarLayout">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="reference|color" />
        <attr name="radius_width" format="dimension"/>
        <attr name="radius_height" format="dimension"/>
    </declare-styleable>

</resources>
