<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/bigSize</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleBarBack">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TitleBarLayout">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="reference|color" />
        <attr name="radius_width" format="dimension"/>
        <attr name="radius_height" format="dimension"/>
    </declare-styleable>

    <style name = "transparentDialog"  parent = "@android:style/Theme.Dialog" >
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item><!-- 背景透明 -->
        <item name="android:backgroundDimEnabled" >false</item><!-- 模糊 -->
    </style >

</resources>
