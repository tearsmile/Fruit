<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/header"
        layout="@layout/common_title"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/header"
        android:background="@color/lineDivider"/>
    <LinearLayout
        android:id="@+id/ll_order_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:layout_below="@id/line1">
        <RelativeLayout
            android:id="@+id/rl_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="已下单"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/halfBlack"/>
            <View
                android:id="@+id/line_order"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainColor"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/lineDivider"/>
        <RelativeLayout
            android:id="@+id/rl_deliver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_deliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="配送中"
                android:textSize="16sp"
                android:textColor="@color/halfBlack"/>
            <View
                android:id="@+id/line_deliver"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainColor"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />

        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/lineDivider"/>
        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="已完成"
                android:textSize="16sp"
                android:textColor="@color/halfBlack"/>
            <View
                android:id="@+id/line_finish"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainColor"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_order_title"
        android:background="@color/lineDivider"/>

    <com.bowl.fruit.ui.widget.XListView
        android:id="@+id/lv_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line2"
        android:scrollbars="none"
        android:divider="#f3f3f3"
        android:dividerHeight="7dp"
        />

</RelativeLayout>