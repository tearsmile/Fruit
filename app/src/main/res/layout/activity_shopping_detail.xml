<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/header"
        layout="@layout/common_title"/>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/header"
        android:background="@color/lineDivider"/>

    <LinearLayout
        android:id="@+id/ll_buy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_select_all"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:text="付款:"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/halfBlack"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_sum"
                android:text="￥12.9"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/mainColor"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@color/mainColor"
            android:text="提交订单"
            android:textSize="@dimen/normalSize"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1"
        android:layout_above="@id/ll_buy"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="12dp"
                    android:src="@drawable/icon_location1"/>
                <TextView
                    android:id="@+id/tv_choose_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_address"
                    android:text="点击选择收货地址"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_address"
                    android:layout_marginRight="10dp"
                    android:text="小碗"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:text="13123456789"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_name"
                    android:layout_toRightOf="@id/iv_address"
                    android:text="北京市海淀区中国技术交易大厦"
                    android:textSize="@dimen/smallSize"
                    android:textColor="@color/halfBlack"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fruit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/rl_address"/>
            <RelativeLayout
                android:id="@+id/rl_total"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_below="@id/rv_fruit"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="商品总价"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normalSize"/>
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="￥20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normalSize"/>
            </RelativeLayout>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_total"
                android:background="@color/lineDivider"/>
            <RelativeLayout
                android:id="@+id/rl_fruit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_below="@id/line2"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="运费"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normalSize"/>
                <TextView
                    android:id="@+id/tv_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="￥5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normalSize"/>
            </RelativeLayout>
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_fruit"
                android:background="@color/lineDivider"/>
            <RelativeLayout
                android:id="@+id/rl_discount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_below="@id/line3"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="优惠"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normalSize"/>
                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="-￥20"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/normalSize"/>
            </RelativeLayout>
            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_discount"
                android:background="@color/lineDivider"/>
            <RelativeLayout
                android:id="@+id/rl_deliver"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_below="@id/line4"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="运费"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normalSize"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="￥10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normalSize"/>
            </RelativeLayout>
            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_deliver"
                android:background="@color/lineDivider"/>
            <RelativeLayout
                android:id="@+id/rl_pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_below="@id/line4"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="￥10"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/bigSize"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/tv_pay"
                    android:text="合计："
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cash"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_below="@id/rl_pay"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/cash"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv1"
                    android:layout_centerVertical="true"
                    android:text="货到付款"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>

                <ImageView
                    android:id="@+id/iv_cash"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    android:src="@drawable/icon_selected"/>
            </RelativeLayout>

            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_cash"
                android:background="@color/lineDivider"/>

            <RelativeLayout
                android:id="@+id/rl_wechat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_below="@id/line6"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/wechat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv2"
                    android:layout_centerVertical="true"
                    android:text="微信支付"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>

                <ImageView
                    android:id="@+id/iv_wechat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    android:src="@drawable/icon_select"/>
            </RelativeLayout>

            <View
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_wechat"
                android:background="@color/lineDivider"/>

            <RelativeLayout
                android:id="@+id/rl_alipay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_below="@id/line7"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/alipay"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv3"
                    android:layout_centerVertical="true"
                    android:text="支付宝支付"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>

                <ImageView
                    android:id="@+id/iv_alipay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_select"
                    />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>