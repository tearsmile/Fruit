<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/header"
        layout="@layout/common_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
            <TextView
                android:id="@+id/tv_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品基本信息"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_introduction"
                android:layout_marginTop="10dp"
                android:minWidth="320dp"
                android:hint="请输入商品名称"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/halfBlack"/>
            <EditText
                android:id="@+id/et_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_name"
                android:layout_marginTop="10dp"
                android:minWidth="320dp"
                android:hint="请输入商品简要信息"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/halfBlack"/>
            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_desc"
                android:layout_marginTop="15dp"
                android:text="库存:"
                android:textSize="@dimen/normalSize"/>
            <EditText
                android:id="@+id/et_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_toRightOf="@id/tv_stock"
                android:layout_below="@id/et_desc"
                android:textSize="@dimen/normalSize"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_desc"
                android:layout_toRightOf="@id/et_stock"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:text="价格:"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/halfBlack"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_toRightOf="@id/tv_price"
                android:layout_below="@id/et_desc"
                android:textSize="@dimen/normalSize"
                />

            <RelativeLayout
                android:id="@+id/rl_param"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_stock"
                android:layout_marginTop="30dp"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tv_param"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品参数"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"
                    />
                <TextView
                    android:id="@+id/tv_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_param"
                    android:layout_marginTop="20dp"
                    android:text="规格："
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>

                <EditText
                    android:id="@+id/et_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:layout_toRightOf="@id/tv_standard"
                    android:layout_marginTop="30dp"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_param"
                    android:layout_toRightOf="@id/et_standard"
                    android:layout_marginTop="20dp"
                    android:text="重量："
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:layout_toRightOf="@id/tv_weight"
                    android:layout_marginTop="30dp"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <TextView
                    android:id="@+id/tv_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_standard"
                    android:layout_marginTop="30dp"
                    android:text="保质期："
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <EditText
                    android:id="@+id/et_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="240dp"
                    android:layout_toRightOf="@id/tv_life"
                    android:layout_below="@id/tv_standard"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_life"
                    android:layout_marginTop="30dp"
                    android:text="贮存方式："
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <EditText
                    android:id="@+id/et_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="230dp"
                    android:layout_toRightOf="@id/tv_save"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tv_life"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_param"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品描述"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tv_detail"
                    />
                <EditText
                    android:id="@+id/et_detail_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@android:style/Theme.Light.NoTitleBar"
                    android:layout_below="@id/rv_pic"
                    android:hint="介绍一下商品吧~"
                    android:lines="3"
                    android:paddingBottom="14dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/halfBlack"
                    android:textSize="@dimen/normalSize" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/rl_detail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_button"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/normalSize"/>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>