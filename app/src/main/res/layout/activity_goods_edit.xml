<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/header"
        layout="@layout/common_title"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/header"
        android:background="@color/lineDivider"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
            <TextView
                android:id="@+id/tv_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品基本信息"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_introduction"
                android:layout_marginTop="10dp"
                android:minWidth="320dp"
                android:hint="请输入商品名称"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/halfBlack"/>
            <EditText
                android:id="@+id/et_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_name"
                android:layout_marginTop="10dp"
                android:minWidth="320dp"
                android:hint="请输入商品简要信息"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/halfBlack"/>
            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_desc"
                android:layout_marginTop="15dp"
                android:text="库存:"
                android:textSize="@dimen/normalSize"/>
            <EditText
                android:id="@+id/et_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_toRightOf="@id/tv_stock"
                android:layout_below="@id/et_desc"
                android:textSize="@dimen/normalSize"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_desc"
                android:layout_toRightOf="@id/et_stock"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:text="价格:"
                android:textSize="@dimen/normalSize"
                android:textColor="@color/halfBlack"/>
            <EditText
                android:id="@+id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_toRightOf="@id/tv_price"
                android:layout_below="@id/et_desc"
                android:textSize="@dimen/normalSize"
                />
            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_stock"
                android:layout_marginTop="15dp"
                android:text="优惠:"
                android:textSize="@dimen/normalSize"/>
            <EditText
                android:id="@+id/et_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="240dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv_discount"
                android:layout_below="@id/tv_stock"
                android:textSize="@dimen/normalSize"
                android:hint="请输入优惠价格，无优惠可不填"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_discount"
                android:layout_marginTop="15dp"
                android:text="分类:"
                android:textSize="@dimen/normalSize"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/tv_type"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="默认"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/btn_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="热销"/>
                <RadioButton
                    android:id="@+id/btn_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="优惠"/>
                <RadioButton
                    android:id="@+id/btn_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="推荐"/>
                <RadioButton
                    android:id="@+id/btn_platter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拼盘"/>
            </RadioGroup>
            <RelativeLayout
                android:id="@+id/rl_param"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radioGroup"
                android:layout_marginTop="30dp"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tv_param"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品参数"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"
                    />
                <TextView
                    android:id="@+id/tv_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_param"
                    android:layout_marginTop="20dp"
                    android:text="规格："
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>

                <EditText
                    android:id="@+id/et_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:layout_toRightOf="@id/tv_standard"
                    android:layout_marginTop="30dp"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_param"
                    android:layout_toRightOf="@id/et_standard"
                    android:layout_marginTop="20dp"
                    android:text="重量："
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:layout_toRightOf="@id/tv_weight"
                    android:layout_marginTop="30dp"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <TextView
                    android:id="@+id/tv_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_standard"
                    android:layout_marginTop="30dp"
                    android:text="保质期："
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <EditText
                    android:id="@+id/et_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="240dp"
                    android:layout_toRightOf="@id/tv_life"
                    android:layout_below="@id/tv_standard"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <TextView
                    android:id="@+id/tv_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_life"
                    android:layout_marginTop="30dp"
                    android:text="贮存方式："
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
                <EditText
                    android:id="@+id/et_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="230dp"
                    android:layout_toRightOf="@id/tv_store"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tv_life"
                    android:textSize="@dimen/normalSize"
                    android:textColor="@color/halfBlack"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_param"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品描述"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tv_detail"
                    />
                <EditText
                    android:id="@+id/et_detail_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@android:style/Theme.Light.NoTitleBar"
                    android:layout_below="@id/rv_pic"
                    android:hint="介绍一下商品吧~"
                    android:lines="3"
                    android:paddingBottom="14dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/halfBlack"
                    android:textSize="@dimen/normalSize" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/rl_detail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_button"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/normalSize"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/halfBlack"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/normalSize"
            android:textColor="@color/halfBlack"/>
        <TextView
            android:id="@+id/tv_album"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/tv_cancel"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="相册"
            android:textSize="@dimen/normalSize"
            android:textColor="@color/halfBlack"/>
        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/tv_album"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:gravity="center"
            android:text="拍摄"
            android:textSize="@dimen/normalSize"
            android:textColor="@color/halfBlack"/>
    </RelativeLayout>

</RelativeLayout>