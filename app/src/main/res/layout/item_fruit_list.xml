<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    >
    <ImageView
        android:id="@+id/iv_fruit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/fruit"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fruit"
        android:layout_alignTop="@id/iv_fruit"
        android:layout_marginLeft="20dp"
        android:text="智利蓝莓125g*1盒"
        android:textSize="@dimen/normalSize"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fruit"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="智利蓝莓125g*1盒"
        android:textSize="@dimen/smallSize"
        android:textColor="@color/halfBlack" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fruit"
        android:layout_alignBottom="@id/iv_fruit"
        android:layout_marginLeft="20dp"
        android:text="￥12.9"
        android:textSize="@dimen/normalSize"
        android:textColor="@color/lightMainColor"/>

</RelativeLayout>